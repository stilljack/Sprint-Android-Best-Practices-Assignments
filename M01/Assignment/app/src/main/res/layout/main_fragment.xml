<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">


    <EditText
        android:id="@+id/et_purchase_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0.00"
        app:layout_constraintBottom_toTopOf="@id/tv_purchase"
        app:layout_constraintStart_toStartOf="@+id/tv_purchase"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="46dp" />

    <TextView
        android:id="@+id/tv_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="12dp"
        android:text="Purchase Price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_purchase_price" />


    <EditText
        android:id="@+id/et_down_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0.00"
        app:layout_constraintEnd_toStartOf="@+id/et_purchase_price"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="@+id/tv_down_payment"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_down_payment"
        android:layout_width="97dp"
        android:layout_height="56dp"
        android:text="Down Payment"


        app:layout_constraintBottom_toTopOf="@+id/et_interest_rate"
        app:layout_constraintStart_toStartOf="@+id/et_interest_rate"
        app:layout_constraintTop_toBottomOf="@+id/et_down_payment" />


    <EditText
        android:id="@+id/et_loan_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:hint="Loan length"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.807"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_interest_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan length"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="457dp"
        app:layout_constraintEnd_toEndOf="@id/et_interest_rate"
        app:layout_constraintTop_toBottomOf="@id/et_loan_length"/>

    <EditText
        android:id="@+id/et_interest_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:hint="interest rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_loan_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan length"
        app:layout_constraintEnd_toEndOf="@id/et_loan_length"
        app:layout_constraintTop_toBottomOf="@id/et_interest_rate"
        tools:layout_editor_absoluteX="60dp" />


    <TextView
        android:id="@+id/tv_display_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan length"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
